{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "./app/build/de-ts",
        "sourceMap": true,
        // Allow importing legacy JS libraries
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}